---
import Section from "../Section.astro";

import { skills } from "../../../cv.json"
---

<Section title="Skills">

    <ul>
        {
            skills.map((el) => (
                <li>
                    <span>{el.name}</span></li>
            ))
        }
    </ul>
</Section>

<style>
    ul {
        display: inline-flex;
        gap: 8px;
        flex-wrap: wrap;
        padding: 0
    }

     li {
        border-radius: 6px;
        background: #dbdbdb;
        color: black;
        font-size: 0.8rem;
        font-weight: 500;
        padding: 0.2rem 0.6rem;
        margin: 0;
        list-style: none;
     }
</style>